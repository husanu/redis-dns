{
    "name": "redis-dns",
    "private": false,
    "version": "0.0.8",
    "author": "Jonas Colmsjö <jonas@gizur.com>",
    "description": "Simple DNS server configured using redis. Based on iriscouche's dnsd: https://github.com/iriscouch/dnsd",
    "homepage": "https://github.com/colmsjo/redis-dns",
    "repository": {
        "type": "git",
        "url": "https://github.com/colmsjo/redis-dns.git"
    },
    "bugs": {
        "url": "https://github.com/colmsjo/redis-dns/issues"
    },
    "author": "Jonas Colmsjö <jonas@gizur.com>",
    "main": "server.js",
    "bin": "./server.js",
    "scripts": {
        "test": "xo && exit 0",
        "dev": "export NODE_ENV='dev' && clear && yarn start",
        "start": "node_modules/.bin/babel-node index.js"
    },
    "dependencies": {
        "dnsd": "0.9.0",
        "redis": "0.8.4",
        "nconf" : "*",
        "native-dns" : "*",
        "babel-cli": "^6.24.0",
        "babel-core": "^6.24.0",
        "babel-preset-es2015": "^6.24.0",
        "babel-preset-stage-2": "^6.22.0"
    },
    "devDependencies": {
        "grunt": ">=0.4.1",
        "grunt-contrib-jshint": "~0.6.0",
        "grunt-contrib-nodeunit": "~0.2.0",
        "grunt-contrib-uglify": "~0.2.2",
        "jshint": "2.1.4"
    },
    "keywords": [
        "DNS",
        "bind",
        "dnsd",
        "redis"
    ],
    "license": "WTFPL",
    "preferGlobal": false,
    "xo": {
        "space": 4,
        "rules": {
            "space-before-function-paren": [
                "error",
                "never"
            ]
        },
        "envs": [
            "node",
            "es6"
        ]
    }
}
